<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h1>Welcome to express.js</h1>

    <form class="" action="/signup" method="post">
      <ul>
        {{#errors}}
          <li>{{param}}: {{msg}}</li>
        {{/errors}}
      </ul>

      <input type="text" name="first_name" value="{{first_name}}">
      <input type="text" name="last_name" value="{{last_name}}">
      <input type="submit" name="" value="Send!">
    </form>

    {{#first_name}}
      <h2>Data:</h2>
      {{first_name}}
    {{/first_name}}

    {{^first_name}}
      <h2>No First Name</h2>
    {{/first_name}}

  </body>
</html>
